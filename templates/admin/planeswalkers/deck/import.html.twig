{% macro afficher() %}
    <div class="modal fade" id="deckImportModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="modal-title" id="deckImportModalTitre">
                        <i class="fas fa-file-download"></i> Import deck
                    </div>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="{{ path('planeswalkers.deck.import') }}" method="post" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input id="title" name="title" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="content">Strategy</label>
                            <textarea id="content" name="content" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="deckImportContent">
                                Use MTG Arena format
                            </label>
                            <textarea class="form-control" id="deckImportContent" name="contentLines" rows="15"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success"><i class="fas fa-file-download"></i> <span>Start</span></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endmacro %}