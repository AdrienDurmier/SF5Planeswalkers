{% macro script() %}
    <script>
        {# Rendu de la zone exile #}
        function renderExile(datas, player_area){
            player_area.find('.exile-top-card').text(datas.exile.count);
            // Mise Ã  jour de la carte du dessus du exile
            if (datas.exile.count > 0){
                player_area.find('.exile-top-card').css({'background-image':'url('+datas.exile.topCard.imageUrisPng+')'});
            }else{
                player_area.find('.exile-top-card').css({'background-image':'none'});
            }
        }
    </script>
{% endmacro %}