{% macro script() %}
    <script>
        {# Rendu de la zone exile #}
        function renderExile(retourMercure, player_area){
            player_area.find('.exile-top-card').text(retourMercure.exile.count);
            // Mise Ã  jour de la carte du dessus du exile
            if (retourMercure.exile.count > 0){
                player_area.find('.exile-top-card').css({'background-image':'url('+retourMercure.exile.topCard.imageUrisPng+')'});
            }else{
                player_area.find('.exile-top-card').css({'background-image':'none'});
            }
        }
    </script>
{% endmacro %}