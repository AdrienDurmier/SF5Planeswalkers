{% macro script() %}
    <script>
        {# Rendu d'une main #}
        function renderHand(datas, player_area){
            let results_html = "";
            $.each(datas.hand.cards, function (index, gameCardHand) {
                results_html += '<a href="#" class="hand-card-link" data-area="hand" draggable="true" data-player="'+datas.player+'" data-id="'+gameCardHand.id+'" data-idsrcyfall="'+gameCardHand.idScryfall+'">';
                results_html +=     '<div class="hand-card" style="background-image:url('+gameCardHand.imageUrisArtCrop+');">';
                results_html +=         '<div class="hand-card-mana-cost">'+cardSymbol(gameCardHand.manaCost)+'</div>';
                results_html +=         '<div class="hand-card-name">'+cardSymbol(gameCardHand.name)+'</div>';
                results_html +=     '</div>';
                results_html += '</a>';
            })
            player_area.find('.hand').html(results_html);
        }
    </script>
{% endmacro %}