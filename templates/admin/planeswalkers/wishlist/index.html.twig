{% extends 'admin.html.twig' %}

{% block title "My wishlist" %}

{% block body %}

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-200"><i class="fas fa-heart"></i> My wishlist</h1>
        <div class="d-sm-inline-block">
            <a href="{{ path('planeswalkers.wishlist.new') }}" class="d-sm-inline-block btn btn-sm btn-success shadow-sm">
                <i class="fas fa-plus fa-sm text-white-50"></i> New wishlist
            </a>
        </div>
    </div>

    <hr>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm table-striped" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Wishlist</th>
                            <th>Total</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for wishlist in wishlists %}
                        <tr>
                            <td>{{ wishlist.title }}</td>
                            <td>{{ wishlist.cards|length }}</td>
                            <td>{{ wishlist.updated|date('d F Y') }}</td>
                            <td>
                                <a href="{{ path('planeswalkers.wishlist.edit', {id: wishlist.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}