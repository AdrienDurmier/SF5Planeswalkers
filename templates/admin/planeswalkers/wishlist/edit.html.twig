{% extends 'admin.html.twig' %}

{% block title %}
    {{ wishlist }}
{% endblock %}

{% block body %}

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-200"><i class="fas fa-heart"></i> {{ wishlist }}</h1>
    </div>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('planeswalkers.wishlist.index') }}">My wishlist</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ wishlist }}</li>
        </ol>
    </nav>

    <hr>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="row">
                {% for wishlistcard in wishlist.cards %}
                    <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2">
                        <div class="py-3">
                            <a href="{{ path('planeswalkers.card.show', {id: wishlistcard.card.idScryfall}) }}">
                                <img src="{{ wishlistcard.card.imageUrisNormal }}" alt="{{ wishlistcard.card.name }}" class="img-fluid" style="border-radius:15px;">
                            </a>
                            <div class="input-group input-group-sm mb-3">
                                <input type="number" min="0" step="1" class="form-control form-control-sm input-wishlistcard-quantite" data-deckcard="{{ wishlistcard.id }}" name="quantite" value="{{ wishlistcard.quantite }}" />
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <a class="text-danger input-deckcard-delete" title="Supprimer cette carte" data-deckcard="{{ wishlistcard.id }}" style="cursor:pointer;">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}